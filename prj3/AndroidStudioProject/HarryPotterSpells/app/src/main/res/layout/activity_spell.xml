<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpellActivity">

    <TextView
        android:id="@+id/spellScreenMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="You have launched:"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/spellScreenSpell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:gravity="center"
        tools:text="REVELIO"
        app:layout_constraintTop_toBottomOf="@+id/spellScreenMessage"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/spellImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/spellScreenSpell"
        tools:src="@drawable/revelio" />
</androidx.constraintlayout.widget.ConstraintLayout>